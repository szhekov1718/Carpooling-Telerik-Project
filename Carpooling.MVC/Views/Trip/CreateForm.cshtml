
@model Carpooling.Services.TripDTO
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<div class="container">
    <div class="row">

        <div class="col-md-8 col-md-offset-2">

            <h1>Create Trip</h1>

            <form asp-controller="Trip" asp-action="Create">

                <div class="form-group">
                    <label asp-for="StartDestination">Start Destination <span class="require">*</span></label>
                    <input asp-for="StartDestination" type="text" class="form-control" />
                    <span asp-validation-for="StartDestination" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDestination">End Destination <span class="require">*</span></label>
                    <input asp-for="EndDestination" type="text" class="form-control" />
                    <span asp-validation-for="EndDestination" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Departure">Departure<span class="require">*</span></label>
                    <input asp-for="Departure" type="text" class="form-control" />
                    <span asp-validation-for="Departure" class="form-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FreeSpots">Free Spots<span class="require">*</span></label>
                    <input asp-for="FreeSpots" type="text" class="form-control" />
                    <span asp-validation-for="FreeSpots" class="form-error"></span>
                </div>

                <div class="form-group">
                    <button asp-action="Create" type="submit" class="btn btn-primary">Create</button>
                    <button asp-action="Index" type="submit" class="btn btn-primary">Back</button>
                </div>

            </form>
        </div>

    </div>
</div>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>